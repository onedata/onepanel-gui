{{#if noStorages}}
  <div class="row content-row no-border">
    <h1>Registration</h1>
    <p>Worker componets save and retrieve user's data network file system storages.</p>
  </div>
  <div class="row content-row">
    {{cluster-storage-add-form 
      class="col-xs-12 col-sm-8 col-md-6 col-lg-4 col-centered" 
      submit="submitAddStorage"}}
  </div>
{{else}}
  <div class="row">
    <div class="btn-toolbar pull-right">
      {{#bs-button type="default" onClick=(action "startAddStorage")}}
        Add storage
      {{/bs-button}}
      {{#bs-button type="primary" onClick=(action "next")}}
        Finish
      {{/bs-button}}
    </div>
  </div>
  <div class="row">
    {{cluster-storage-table storages=storages}}  
  </div>

{{!-- TODO reset form values on open --}}
  {{#bs-modal
    id="add-storage"
    open=addStorageOpened
    body=false
    footer=true
    as |modal|
  }}
    {{#modal.body}}
      {{cluster-storage-add-form submit="submitAddStorage"}}
    {{/modal.body}}
  {{/bs-modal}}
{{/if}}
