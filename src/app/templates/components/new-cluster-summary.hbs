{{#content-info
  class="scroll-breakpoint-700"
  header=(tt this "header")
  buttonLabel=(tt this "buttonLabel")
  buttonAction=(action "manageNewCluster")
}}
  <p class="text-center">
    {{tt this "textFullyOperational"}}
  </p>
  <p class="text-center">{{tt this "textTwoWays"}}</p>
  <ul class="info">
    <li>
      {{tt this "wayOnezoneInterface"}}
      <strong>({{tt this "wayOnezoneRecommended"}})</strong> â€“
      {{tt this "wayOnezoneInterface1"}}
      <div class="inline-icon-container">
        {{one-icon icon="cluster"}}
      </div>
      <strong>{{tt this "wayOnezoneInterfaceClusters"}}</strong>
      {{tt this "wayOnezoneInterface3"}}
      {{#if (eq serviceType "oneprovider")}}
        {{#if isEmergencyOnepanel}}
          {{tt this "wayOnezoneAccessProvider"}}
        {{/if}}
      {{else}}
        {{tt this "wayOnezoneAccessZone"}}
        <div class="admin-account-info">
          <strong>{{tt this "login"}}:</strong> admin<br>
          <strong>{{tt this "password"}}:</strong> <em>{{tt this "sameAsPassphrase"}}</em>
        </div>
        {{tt this "canChangePassword"}}
      {{/if}}
    </li>
    <li>
      {{tt this "wayOnepanelIntro"}}
      {{tt this "wayOnepanelInterface1"}}
      (<a href={{onepanelUrl}}>{{onepanelUrl}}</a>)
      {{tt this "wayOnepanelInterface2"}}
    </li>
  </ul>
  <p>
    {{tt this "currentlyOn1"}}
    {{tt this (concat "currentlyOn" (if isEmergencyOnepanel "Emergency" "Onezone"))}}
    {{tt this "currentlyOn2"}}.
  </p>
{{/content-info}}
