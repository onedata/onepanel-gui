<div class="row text-center">
  <div class="col-xs-12">
    {{#bs-form class="form-horizontal"
      onSubmit=(action "submitLogin" username password)
      formLayout="horizontal"
      as |form|
    }}
      
      {{#form.group}}
        <div class="input-group">
          <div class="input-group-addon">
            {{one-icon icon="user"}}
          </div>
          {{one-way-input username
            class="form-control"
            update=(action (mut username))
            placeholder="Username"
            disabled=isDisabled
          }}
        </div>
      {{/form.group}}
      {{#form.group}}
        <div class="input-group">
          <div class="input-group-addon">
            {{one-icon icon="lock"}}
          </div>
          {{one-way-password password
            class="form-control"
            update=(action (mut password))
            placeholder="Password"
            disabled=isDisabled
          }}
        </div>
      {{/form.group}}
      <div class="row text-center">
        {{#spin-button class="btn btn-primary"
          buttonStyle="expand-left"
          action=(action "submitLogin" username password)
        }}
          {{t 'components.basicauthLoginForm.signIn'}}
        {{/spin-button}}
      </div>
    {{/bs-form}}    
  </div>
</div>
