<div class="row content-row header-row {{unless nextStep "hidden-xs"}}">
  <h1>Storages
    <div class="btn-toolbar">
      {{#unless noStorages}}
        {{#one-collapsible-toolbar isGlobal=true isMinimized=false as |dropdown|}}
          {{#dropdown.item buttonStyle="default" triggerClasses="btn-add-storage" itemAction=(action "toggleAddStorageForm")}}
            {{_addStorageButtonLabel}}
          {{/dropdown.item}}
          {{#if finishButton}}
            {{#dropdown.item buttonStyle="primary" triggerClasses="btn-add-storage" itemAction=(action "next")}}
              Finish
            {{/dropdown.item}}
          {{/if}}
        {{/one-collapsible-toolbar}}
      {{/unless}}
    </div>
  </h1>
</div>
<div class="row content-row row-small {{unless addStorageOpened "row-hidden"}}">
  <h1 class="form-title">Add a new storage</h1>
    {{cluster-storage-add-form 
      class="col-xs-12 col-sm-10 col-md-8 col-lg-6 col-centered" 
      submit=(action "submitAddStorage")
      isFormOpened=addStorageOpened}}
</div>
<div class="row">
  {{#promise-proxy-container proxy=storagesProxy}}
    {{#promise-proxy-container proxy=spacesProxy}}
      {{cluster-storage-table 
        storages=storagesProxy.content 
        spaces=spacesProxy.content}}
    {{/promise-proxy-container}}
  {{/promise-proxy-container}}
</div>
