{{#listItem.header}}
  {{space.name}}
  {{#bs-button type="info" onClick=(action "somaa")}}
  in header
{{/bs-button}}
  <div class="btn-toolbar">
    {{#bs-button type="info" onClick=(action "somaa")}}
  in toolbar
{{/bs-button}}
<button {{action "somaa"}}>Lolo</button>
    {{!-- TODO replace icon-btn with btn-icon-only to allow usage of bs-button or allow colors... --}}
    <button class="btn icon-btn btn-revoke-space" id={{concat elementId "-btn-revoke-space"}}>
      {{one-icon icon="remove"}}
      {{bs-tooltip
        visible=revokeTooltipVisible
        title="Revoke space support from this provider"
        placement="bottom"
        triggerEvents="hover"
      }}
    </button>
      {{#one-webui-popover
        class="one-popover-test"
        triggerSelector=(concat "#" (concat elementId "-btn-revoke-space"))
        as |popover|
      }}

        <h2>{{close}}</h2>
        <h1>Revoke space support?</h1>
        <p>When space support will be revoked, data from this space that is not replicated among other providers will be lost.</p>
        <div class="btn-toolbar">
          <button {{action "cztery"}}>Jeden</button>
          
          <a {{action (action popover.close)}}>Noo</a>
          {{#spin-button class="btn btn-danger"}}
            Yes, revoke
          {{/spin-button}}
        </div>
      {{/one-webui-popover}}
  </div>
  {{!--{{#webui-popover}}
    Some text
  {{/webui-popover}}--}}
  
{{/listItem.header}}
{{#listItem.content}}
  <table class="item-table">
    <tr>
      <td class="item-table-img-cell"></td>
      <td class="item-table-content-cell">
        <div class="row content-row">
          <strong>Name:</strong> {{space.name}}
        </div>
        <div class="row content-row">
          <strong>Id:</strong> {{space.id}}
        </div>
      </td>
    </tr>
  </table>
{{/listItem.content}}

