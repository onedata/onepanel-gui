{{#listItem.header}}
  {{space.name}}
  <div class="btn-toolbar">
    {{!-- TODO replace icon-btn with btn-icon-only to allow usage of bs-button or allow colors... --}}
    <button class="btn icon-btn btn-revoke-space" id={{concat elementId "-btn-revoke-space"}}>
      {{one-icon icon="remove"}}
      {{bs-tooltip
        visible=revokeTooltipVisible
        title="Revoke space support from this provider"
        placement="bottom"
        triggerEvents="hover"
      }}
    </button>
  </div>
{{/listItem.header}}
{{#listItem.content}}
  <table class="item-table">
    <tr>
      <td class="item-table-img-cell"></td>
      <td class="item-table-content-cell">
        <div class="row content-row">
          <strong>Name:</strong> {{space.name}}
        </div>
        <div class="row content-row">
          <strong>Id:</strong> {{space.id}}
        </div>
      </td>
    </tr>
  </table>
{{/listItem.content}}

{{#confirm-box
  title="Revoke space support?"
  class="confirm-box-revoke-space-support"
  triggerElement=(concat "#" (concat elementId "-btn-revoke-space"))
  cancelLabel="No, don't revoke"
  confirmLabel="Yes, revoke"
}}
  <p>
    When space support will be revoked, data from this space that is not replicated among other providers will be lost.
  </p>
{{/confirm-box}}

