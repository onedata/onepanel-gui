{{#if _hasCheckbox}}
  {{one-checkbox 
    class="item-checkbox"
    isReadOnly=(not _isCheckboxActive)
    checked=_isSelected
    update=toggleSelection}}
{{/if}}
{{#if (and isCollapsible (not disableToggleIcon))}}
  {{one-icon class="toggle-icon" icon="arrow-down"}}
{{/if}}
{{yield (hash
  toggleAction=(action "toggle")
)}}
