<div class="world-map light">
  <div class="content-info-content-container">
    <div class="row text-center">
      <div class="col-xs-12">
        <h1>{{header}}</h1>
        {{#if subheader}}
          <h2>{{subheader}}</h2>
        {{/if}}
        <p class="lead">{{text}}</p>
      </div>
    </div>
    {{#if imagePath}}
      {{one-image 
        imagePath=imagePath 
        imageTextClass=imageTextClass 
        imageText=imageText}}
    {{/if}}
    <div class="row text-center">
      <div class="col-xs-12">
        {{#spin-button class="btn btn-primary" action=(action buttonAction)}}
          {{buttonLabel}}
        {{/spin-button}}
      </div>
    </div>
  </div>
  {{!-- TODO yield content --}}
</div>
