{{#unless _isInProcess}}

  {{new-cluster-welcome start=(action (mut _isInProcess))}}

{{else}}

  {{#one-wizard steps=steps currentIndex=(readonly initStepIndex) as |w|}}
    {{#if (eq w.index 0)}}
      {{new-cluster-installation
        clusterConfigurationSuccess=(action "clusterConfigurationSuccess")
        nextStep=(action "next" target=w.wizard)
      }}
    {{else if (eq w.index 1)}}
      {{new-cluster-zone-registration nextStep=(action "next" target=w.wizard)}}
    {{else if (eq w.index 2)}}
      {{new-cluster-storage nextStep=(action "next" target=w.wizard)}}
    {{else if (eq w.index 3)}}
      {{new-cluster-summary clusterId=clusterId finish=(action "finishInitProcess")}}
    {{/if}}
  {{/one-wizard}}

{{/unless}}
