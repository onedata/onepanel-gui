{{#bs-form submitOnEnter=false class="form-horizontal" as |form|}}
  {{#form.group}}
    {{#power-select
      options=storages
      selected=selectedStorage
      onchange=(action "storageChanged")
      searchEnabled=true
      as |storageType|
    }}
      {{storage.name}}
    {{/power-select}}
  {{/form.group}}

  {{one-form-fields
    bsForm=form
    fields=formFields
    formValues=formValues
    inputChanged=(action "inputChanged")
  }}

  {{#spin-button type="submit" class="btn btn-primary" action=(action "submit")}}
    Add
  {{/spin-button}}
{{/bs-form}}
