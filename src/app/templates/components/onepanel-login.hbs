{{#if isEmergencyWarningBarVisible}}
  <EmergencyWarningBar />
{{/if}}

<LoginLayout
  @loginViewModel={{loginViewModel}}
  @withEmergencyWarningBar={{isEmergencyWarningBarVisible}}
>
  {{#if isEmergencyPassphraseSet}}
    <LoginBox @loginViewModel={{loginViewModel}} />
  {{else}}
    <NoEmergencyPassphraseBox />
  {{/if}}
</LoginLayout>
