{{#if anySpaceRejected}}
  {{resource-load-error
    class="alert-some-spaces-rejected"
    message="Some of space details cannot be loaded properly."
    onClose=(action "closeRejectedError")
  }}
{{/if}}

{{#one-collapsible-list as |list|}}
  {{#each spaces as |spaceProxy|}}
    {{!-- TODO error handling, loading indicators inside item (because of reload) --}}
    {{#list.item as |listItem|}}
      {{cluster-spaces-table-item
        listItem=listItem
        spaceProxy=spaceProxy
        revokeSpace=(action "revokeSpace")
        submitModifySpace=(action "submitModifySpace" spaceProxy.content)
      }}
    {{/list.item}}
  {{/each}}
{{/one-collapsible-list}}
